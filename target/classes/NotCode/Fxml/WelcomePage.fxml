<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="1030.0" prefWidth="1950.0" styleClass="anchor" stylesheets="@../Css/PageStylesheet.css"
            xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.ViewController.WelcomePageController">
    <children>
        <Label alignment="TOP_CENTER" layoutX="574.0" layoutY="100.0"
               style="-fx-background-color: #000000; -fx-effect: dropshadow(three-pass-box, black, 50, 0.6, 0, 0);"
               text="Welcome to the game. Hope you enjoy" textAlignment="CENTER" textFill="#32ffaa"
               textOverrun="CENTER_WORD_ELLIPSIS">
            <font>
                <Font size="48.0"/>
            </font>
        </Label>
        <Button alignment="CENTER" layoutX="638.0" layoutY="637.0" mnemonicParsing="false" onAction="#goToLoginPage"
                prefHeight="74.0" prefWidth="278.0"
                style="-fx-background-color: #ffffff; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, white, 50, 0.6, 0, 0);"
                text="Log in">
            <font>
                <Font size="30.0"/>
            </font>
        </Button>
        <Button alignment="CENTER" layoutX="1035.0" layoutY="641.0" mnemonicParsing="false" onAction="#goToRegisterPage"
                prefHeight="74.0" prefWidth="278.0"
                style="-fx-background-color: #ffffff; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, white, 50, 0.6, 0, 0);"
                text="Register">
            <font>
                <Font size="30.0"/>
            </font>
        </Button>
        <Button alignment="CENTER" layoutX="631.0" layoutY="818.0" mnemonicParsing="false"
                onAction="#goToGameWithoutLogin" prefHeight="70.0" prefWidth="278.0"
                style="-fx-background-color: #ffffff; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, white, 50, 0.6, 0, 0);"
                text="play without log in">
            <font>
                <Font size="28.0"/>
            </font>
        </Button>
        <Button alignment="CENTER" layoutX="1036.0" layoutY="815.0" mnemonicParsing="false" onAction="#handleExit"
                prefHeight="70.0" prefWidth="278.0"
                style="-fx-background-color: #ffffff; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, white, 50, 0.6, 0, 0);"
                text="Exit">
            <font>
                <Font size="35.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
