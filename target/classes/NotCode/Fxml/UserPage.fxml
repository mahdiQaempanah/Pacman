<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="1030.0" prefWidth="1950.0" styleClass="anchor" stylesheets="@../Css/PageStylesheet.css"
            xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.ViewController.UserPageController">
    <children>
        <Button fx:id="deleteAccountButton" layoutX="5.0" mnemonicParsing="false" onAction="#handleDeleteAccount"
                prefHeight="73.0" prefWidth="226.0" style="-fx-background-color: #ae1616; -fx-cursor: hand;"
                text="Delete Account" textFill="WHITE">
            <font>
                <Font size="26.0"/>
            </font>
        </Button>
        <Button fx:id="logoutButton" layoutX="233.0" layoutY="-1.0" mnemonicParsing="false" onAction="#handleLogout"
                prefHeight="73.0" prefWidth="168.0" style="-fx-background-color: #3f6acf; -fx-cursor: hand;"
                text="Log out" textFill="WHITE">
            <font>
                <Font size="24.0"/>
            </font>
        </Button>
        <Label fx:id="resultLabel" layoutX="4.0" layoutY="107.0" prefHeight="38.0" prefWidth="256.0"/>
        <Button layoutX="570.0" layoutY="727.0" mnemonicParsing="false" onAction="#playGame" prefHeight="68.0"
                prefWidth="270.0"
                style="-fx-background-color: #a4a4a4; -fx-effect: dropshadow(three-pass-box,  #a4a4a4, 50, 0.6, 0, 0); -fx-cursor: hand;"
                text="play Game">
            <font>
                <Font size="31.0"/>
            </font>
        </Button>
        <Button layoutX="1105.0" layoutY="718.0" mnemonicParsing="false" onAction="#showScoreBoard" prefHeight="74.0"
                prefWidth="282.0"
                style="-fx-background-color: #a4a4a4; -fx-effect: dropshadow(three-pass-box,  #a4a4a4, 50, 0.6, 0, 0); -fx-cursor: hand;"
                text="show scoreboard">
            <font>
                <Font size="24.0"/>
            </font>
        </Button>
        <Button layoutX="846.0" layoutY="839.0" mnemonicParsing="false" onAction="#changePassword" prefHeight="68.0"
                prefWidth="270.0"
                style="-fx-background-color: #a4a4a4; -fx-effect: dropshadow(three-pass-box,  #a4a4a4, 50, 0.6, 0, 0); -fx-cursor: hand;"
                text="change password">
            <font>
                <Font size="28.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
