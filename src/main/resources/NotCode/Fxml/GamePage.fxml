<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="1030.0" prefWidth="1950.0" style="-fx-background-color: black;"
            xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.ViewController.GamePageController">
    <children>
        <AnchorPane fx:id="boardPane" layoutX="824.0" layoutY="65.0"/>
        <Label layoutX="57.0" layoutY="74.0" prefHeight="62.0" prefWidth="154.0" text="Score :" textFill="WHITE">
            <font>
                <Font name="Bell MT" size="45.0"/>
            </font>
        </Label>
        <Label layoutX="55.0" layoutY="162.0" prefHeight="62.0" prefWidth="154.0" text="chance :" textFill="WHITE">
            <font>
                <Font name="Bell MT" size="45.0"/>
            </font>
        </Label>
        <Label fx:id="scoreLabel" layoutX="190.0" layoutY="77.0" prefHeight="62.0" prefWidth="154.0" text="0"
               textFill="WHITE">
            <font>
                <Font name="Bell MT" size="45.0"/>
            </font>
        </Label>
        <Label fx:id="chanceLabel" layoutX="207.0" layoutY="164.0" prefHeight="62.0" prefWidth="154.0" text="0"
               textFill="WHITE">
            <font>
                <Font name="Bell MT" size="45.0"/>
            </font>
        </Label>
        <Button fx:id="pauseButton" layoutX="55.0" layoutY="782.0" mnemonicParsing="false" onAction="#handlePause"
                prefHeight="70.0" prefWidth="186.0" style="-fx-cursor: hand; -fx-background-color: blue;" text="Pause"
                textFill="WHITE">
            <font>
                <Font size="29.0"/>
            </font>
        </Button>
        <Button fx:id="exitButton" layoutX="264.0" layoutY="782.0" mnemonicParsing="false"
                onAction="#handlePressExitButton" prefHeight="70.0" prefWidth="186.0"
                style="-fx-cursor: hand; -fx-background-color: red;" text="Exit" textFill="WHITE">
            <font>
                <Font size="31.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
