<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="1030.0" prefWidth="1950.0" style="-fx-background-color: black;"
            xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.ViewController.DeterminationGamePropertyPageController">
    <children>
        <Label layoutX="248.0" layoutY="395.0" prefHeight="74.0" prefWidth="206.0" text="Pacman Life :"
               textFill="WHITE">
            <font>
                <Font size="31.0"/>
            </font>
        </Label>
        <Label fx:id="pacmanLifeLabel" layoutX="449.0" layoutY="410.0" text="2" textFill="WHITE">
            <font>
                <Font size="31.0"/>
            </font>
        </Label>
        <Button layoutX="513.0" layoutY="412.0" mnemonicParsing="false" onAction="#decreaseLife" prefHeight="37.0"
                prefWidth="44.0" text="-">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
        <Button layoutX="559.0" layoutY="412.0" mnemonicParsing="false" onAction="#increaseLife" prefHeight="37.0"
                prefWidth="44.0" text="+">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
        <ChoiceBox fx:id="levelBox" layoutX="452.0" layoutY="536.0" prefWidth="150.0"/>
        <Label layoutX="249.0" layoutY="509.0" prefHeight="74.0" prefWidth="206.0" text="Level :" textFill="WHITE">
            <font>
                <Font size="31.0"/>
            </font>
        </Label>
        <ChoiceBox fx:id="mapBox" layoutX="456.0" layoutY="274.0" prefWidth="150.0"/>
        <Label layoutX="253.0" layoutY="247.0" prefHeight="74.0" prefWidth="206.0" text="Map :" textFill="WHITE">
            <font>
                <Font size="31.0"/>
            </font>
        </Label>
        <AnchorPane fx:id="mapPane" layoutX="929.0" layoutY="262.0"/>
        <Button layoutX="228.0" layoutY="759.0" mnemonicParsing="false" onAction="#startGame" prefHeight="58.0"
                prefWidth="166.0" style="-fx-cursor: hand; -fx-background-color: blue;" text="Start game"
                textFill="WHITE">
            <font>
                <Font size="25.0"/>
            </font>
        </Button>
        <Button layoutX="402.0" layoutY="759.0" mnemonicParsing="false" onAction="#handleExit" prefHeight="58.0"
                prefWidth="166.0" style="-fx-cursor: hand; -fx-background-color: purple;" text="Exit" textFill="WHITE">
            <font>
                <Font size="27.0"/>
            </font>
        </Button>
        <Label fx:id="warningLabel" layoutX="592.0" layoutY="761.0" style="-fx-background-color: red;" textFill="WHITE">
            <font>
                <Font size="29.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
