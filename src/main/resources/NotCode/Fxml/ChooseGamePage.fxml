<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="1030.0" prefWidth="1950.0" styleClass="anchor" stylesheets="@../Css/PageStylesheet.css"
            xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.ViewController.ChooseGamePageController">
    <children>
        <Button layoutX="520.0" layoutY="736.0" mnemonicParsing="false" onAction="#handleExit" prefHeight="83.0"
                prefWidth="210.0" style="-fx-cursor: hand; -fx-background-color: purple;" text="Exit" textFill="WHITE">
            <font>
                <Font size="37.0"/>
            </font>
        </Button>
        <Button fx:id="newGameButton" layoutX="873.0" layoutY="732.0" mnemonicParsing="false" onAction="#createNewGame"
                prefHeight="83.0" prefWidth="210.0" style="-fx-cursor: hand; -fx-background-color: blue;"
                text="new Game" textFill="WHITE">
            <font>
                <Font size="28.0"/>
            </font>
        </Button>
        <Button fx:id="oldGameButton" layoutX="1239.0" layoutY="730.0" mnemonicParsing="false" onAction="#loadOldGame"
                prefHeight="83.0" prefWidth="210.0" style="-fx-cursor: hand; -fx-background-color: #ec2aab;"
                text="old Game" textFill="WHITE">
            <font>
                <Font size="25.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
